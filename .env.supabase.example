############
# Supabase Self-Hosted Environment Variables
# Copy this file to .env.supabase and fill in the values
############

# Database Password
# IMPORTANT: Change this to a strong, unique password
POSTGRES_PASSWORD=your-super-secret-postgres-password-here

# JWT Secret (must be at least 32 characters)
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-token-with-at-least-32-characters-long

# API Keys
# Generate with: openssl rand -base64 32
# ANON_KEY is used by the frontend (public)
ANON_KEY=your-anon-key-here

# SERVICE_ROLE_KEY is used for backend operations (keep secret!)
SERVICE_ROLE_KEY=your-service-role-key-here

# External URLs
# Change these to your VPS domain/IP
API_EXTERNAL_URL=http://your-vps-ip:8000
SITE_URL=http://your-vps-ip

# Studio Configuration
STUDIO_DEFAULT_ORGANIZATION=Selvadentro
STUDIO_DEFAULT_PROJECT=Dashboard IA

# SMTP Configuration (for auth emails)
# Optional - only needed if you want email verification/password reset
SMTP_ADMIN_EMAIL=admin@yourdomain.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password
SMTP_SENDER_NAME=Selvadentro Dashboard

# Email Settings
ENABLE_EMAIL_SIGNUP=true
ENABLE_EMAIL_AUTOCONFIRM=false
DISABLE_SIGNUP=false

# JWT Expiry (in seconds)
JWT_EXPIRY=3600

# Additional Redirect URLs (comma-separated)
# Add your dashboard URL here
ADDITIONAL_REDIRECT_URLS=http://your-dashboard-url
